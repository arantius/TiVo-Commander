<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
  <PreferenceCategory android:title="Remote">
    <CheckBoxPreference android:title="Vibrate On Button Press"
      android:key="remote_vibrate" android:defaultValue="true" />
  </PreferenceCategory>
  <PreferenceCategory android:title="Advanced"
    android:summary="You should not change these."
  >
    <CheckBoxPreference android:title="Skip compatibility checks"
        android:key="skip_compat" android:defaultValue="false" />
    <CheckBoxPreference android:title="Verbose debug logging"
        android:key="debug_log" android:defaultValue="false" />
  </PreferenceCategory>
</PreferenceScreen>
