<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:orientation="vertical" android:layout_height="wrap_content"
>
  <include layout="@layout/item_sub_base" />
  <LinearLayout
    android:layout_width="fill_parent" android:layout_height="wrap_content"
  >
    <TextView android:id="@+id/overlap_show_name" android:text="*Overlaps with: Show name"
      android:layout_width="fill_parent" android:layout_height="wrap_content"
      android:textAppearance="?android:attr/textAppearanceSmall"
      android:layout_weight="1" />
    <TextView android:id="@+id/overlap_show_time" android:text="*11:00 - 1:00 PM"
      android:layout_width="fill_parent" android:layout_height="wrap_content"
      android:textAppearance="?android:attr/textAppearanceSmall"
      android:layout_weight="2" android:gravity="right" />
  </LinearLayout>
</LinearLayout>
