<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="180dip" android:layout_height="170dip"
  android:background="@drawable/remote_play_controls"
  android:layout_marginTop="6dip"
>
  <Button android:id="@+id/remote_play"    android:text="" android:layout_marginLeft="70dip"  android:layout_marginTop="0dip"   android:layout_width="43dip" android:layout_height="39dip" android:onClick="onClickRemote" android:background="@drawable/blank" />
  <Button android:id="@+id/remote_pause"   android:text="" android:layout_marginLeft="55dip"  android:layout_marginTop="50dip"  android:layout_width="68dip" android:layout_height="67dip" android:onClick="onClickRemote" android:background="@drawable/blank" />
  <Button android:id="@+id/remote_reverse" android:text="" android:layout_marginLeft="0dip"   android:layout_marginTop="65dip"  android:layout_width="43dip" android:layout_height="39dip" android:onClick="onClickRemote" android:background="@drawable/blank" />
  <Button android:id="@+id/remote_forward" android:text="" android:layout_marginLeft="140dip" android:layout_marginTop="65dip"  android:layout_width="43dip" android:layout_height="39dip" android:onClick="onClickRemote" android:background="@drawable/blank" />
  <Button android:id="@+id/remote_slow"    android:text="" android:layout_marginLeft="70dip"  android:layout_marginTop="130dip" android:layout_width="43dip" android:layout_height="39dip" android:onClick="onClickRemote" android:background="@drawable/blank" />
</RelativeLayout>
